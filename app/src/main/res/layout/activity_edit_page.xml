<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPage">

    <EditText
        android:id="@+id/change_profile_name"
        android:layout_width="120dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/change_imageView2"
        app:layout_constraintStart_toStartOf="@+id/change_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/change_imageView2" />

    <ImageView
        android:id="@+id/change_imageView2"
        android:layout_width="89dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon1" />

    <EditText
        android:id="@+id/change_profile_age"
        android:layout_width="118dp"
        android:layout_height="54dp"
        android:layout_marginTop="22dp"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="@+id/change_profile_name"
        app:layout_constraintStart_toStartOf="@+id/change_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/change_profile_name" />

    <EditText
        android:id="@+id/change_profile_gender"
        android:layout_width="117dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="Gender"
        app:layout_constraintEnd_toEndOf="@+id/change_profile_age"
        app:layout_constraintStart_toStartOf="@+id/change_profile_age"
        app:layout_constraintTop_toBottomOf="@+id/change_profile_age" />

    <EditText
        android:id="@+id/change_profile_description"
        android:layout_width="298dp"
        android:layout_height="137dp"
        android:layout_marginTop="20dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="@+id/change_imageView2"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/change_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/change_profile_gender" />

    <Button
        android:id="@+id/chang_profile_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="submitEdit"
        android:text="submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>