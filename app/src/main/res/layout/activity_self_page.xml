<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelfPage">


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="89dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon1" />

    <TextView
        android:id="@+id/profile_age"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="@+id/profile_name"
        app:layout_constraintStart_toStartOf="@+id/profile_name"
        app:layout_constraintTop_toBottomOf="@+id/profile_name" />

    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="99dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:text="Gender"
        app:layout_constraintEnd_toEndOf="@+id/profile_age"
        app:layout_constraintStart_toStartOf="@+id/profile_age"
        app:layout_constraintTop_toBottomOf="@+id/profile_age" />

    <TextView
        android:id="@+id/profile_description"
        android:layout_width="213dp"
        android:layout_height="109dp"
        android:layout_marginTop="28dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/profile_gender" />

    <Button
        android:id="@+id/editprofile"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:onClick="editProfile"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Self_job"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:clickable="true"
        android:onClick="toJobPlatform"
        android:text="Job platform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/self_socialpage"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:onClick="toSocialPlatform"
        android:text="Social platform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Self_self"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:clickable="true"
        android:drawableBottom="@drawable/textview_border"
        android:onClick="refresh"
        android:text="Self"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/self_socialpage"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toEndOf="@+id/Self_job"
        app:layout_constraintTop_toBottomOf="@+id/list_view_social"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>