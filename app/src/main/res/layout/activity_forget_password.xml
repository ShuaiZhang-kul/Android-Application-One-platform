<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".forgetPassword">

    <TextView
        android:id="@+id/reset_textview"
        android:layout_width="187dp"
        android:layout_height="34dp"
        android:layout_marginTop="80dp"
        android:text="What is your favorite beer?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/reset_answer"
        android:layout_width="189dp"
        android:layout_height="86dp"
        android:layout_marginTop="188dp"
        android:hint="Please type in your answer"
        android:text="Please type in your answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_textview" />

    <Button
        android:id="@+id/reset_submit"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        android:background="#009688"
        android:onClick="submit"
        android:text="submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_answer" />

    <EditText
        android:id="@+id/reset_account"
        android:layout_width="191dp"
        android:layout_height="93dp"
        android:layout_marginTop="48dp"
        android:hint="your account"
        android:text="your account"
        app:layout_constraintEnd_toEndOf="@+id/reset_textview"
        app:layout_constraintStart_toStartOf="@+id/reset_textview"
        app:layout_constraintTop_toBottomOf="@+id/reset_textview" />

    <EditText
        android:id="@+id/reset_passnew"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginTop="56dp"
        android:text="Your new password"
        app:layout_constraintEnd_toEndOf="@+id/reset_answer"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/reset_answer"
        app:layout_constraintTop_toBottomOf="@+id/reset_answer" />
</androidx.constraintlayout.widget.ConstraintLayout>